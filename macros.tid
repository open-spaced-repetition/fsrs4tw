title: $:/plugins/tidme/fsrs4tw/macros
tags: $:/tags/Global

\whitespace trim

\define C(hide,show:"...",id:"default")
<$reveal
    state=<<folded-state>>
    type="nomatch"
    text="show"
    animate="yes"
>
    <$button
        class="tc-btn-invisible"
    >
        <$action-setfield
            $tiddler="$:/temp/tidme/study/question"
            $index=<<__id__>>
            $value={{{ [[$:/temp/tidme/study/question]getindex<__id__>match[show]then[]else[show]] }}}
        />
        <$reveal
            default={{{ [[$:/temp/tidme/study/question]getindex<__id__>] }}}
            type="match"
            text="show"
            animate="yes"
        >
            __$hide$__
        </$reveal>
        <$reveal
            default={{{ [[$:/temp/tidme/study/question]getindex<__id__>] }}}
            type="nomatch"
            text="show"
            animate="yes"
        >
            `[$show$]`
        </$reveal>
    </$button>
</$reveal>
<$reveal
    state=<<folded-state>>
    type="match"
    text="show"
    animate="yes"
>
    __$hide$__
</$reveal>
\end

